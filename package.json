{
  "scripts": {
    "prepare": "husky",
    "logic:build": "bash ./logic/build.sh",
    "logic:clean": "rm -rf ./logic/target ./logic/res",
    "app:install": "pnpm --dir app install",
    "app:dev": "pnpm --dir app dev",
    "app:build": "pnpm --dir app build",
    "app:preview": "pnpm --dir app preview",
    "app:generate-client": "calimero-abi-codegen -i logic/res/abi.json -o app/src/api ",
    "network:bootstrap": "merobox bootstrap run workflows/workflow-example.yml"
  },
  "devDependencies": {
    "husky": "^9.0.11"
  },
  "dependencies": {
    "@calimero-is-near/abi-codegen": "^0.1.0"
  }
}
